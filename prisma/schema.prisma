generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  hashedPassword String
  name String?
  expenses Expense[]
}

model Expense {
  id Int @id @default(autoincrement())
  category String?
  amount Decimal
  date DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int 
}